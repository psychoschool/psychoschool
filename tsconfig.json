{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "errors/*": ["src/errors/*"],
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "store/*": ["src/store/*"],
      "resources/*": ["src/resources/*"],
      "entities/*": ["src/entities/*"],
      "api/*": ["src/resources/api/*"],
      "schemas/*": ["src/resources/schemas/*"],
      "utils/*": ["src/utils/*"],
      "assets/*": ["src/assets/*"],
      "ui-kit/*": ["src/ui-kit/*"],
      "config/*": ["config/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react"
  }
}
